#!/usr/bin/env ruby
require 'smeagol'

args = ARGV.dup
cmd  = args.shift

case cmd
when 'init', 'initialize'
  Smeagol::CLI.init(args)
when 'serve'
  Smeagol::CLI.serve(args)
when 'preview'
  Smeagol::CLI.preview(args)
when 'update'
  Smeagol::CLI.update(args)
when 'static'
  Smeagol::CLI.spin(args)
when 'deploy'
  Smeagol::CLI.deploy(args)
else
  Smeagol::CLI.help(args)
end


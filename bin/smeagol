#!/usr/bin/env ruby

def self.main(argv)
  commands = %w{init build sync help server}
  command = commands.include?(argv.first) ? argv.shift : 'server'

  case command
  when 'init'
    require 'smeagol'
    Smeagol::CLI.init(argv)
  when 'build'
    require 'smeagol'
    Smeagol::CLI.build(argv)
  when 'sync'
    require 'smeagol'
    Smeagol::CLI.sync(argv)
  when 'help'
    puts "usage: smeagol [COMMAND] [OPTIONS]"
    puts
    puts "COMMANDS:"
    commands.each do |c|
      puts "  #{c}"
    end
    puts
    puts "Default command if none given is `server'."
  when 'server'
    if ARGV.include?('-d')
      ARGV.delete('-d')
      require 'daemons'
      Daemons.run_proc(File.basename(__FILE__)) do
        require 'smeagol'
        Smeagol::CLI.serve(argv)
      end
    else
      require 'smeagol'
      Smeagol::CLI.serve(argv)
    end
  end
end

main(ARGV)

